    <content><![CDATA[
array<int, 3> g[N]; // from, to, weight
int dist[N]; // dist from the source

bool bellmenFord(){
    /* Algo to check wheather there is a negative edge cycle?.
       TC : O(n*m) */

    for(int i = 0; i < n; i++){
        dist[i] = inf;
    }
    dist[0] = 0;
    for(int i = 0; i < n-1; i++){
        for(int j = 0; j < m; j++){
            auto [from, to, weight] = g[j];
            if(dist[to] > dist[from] + weight){
                dist[to] = dist[from] + weight;
            }
        }
    }
    bool hasCycle = false;
    for(int j = 0; j < m; j++){
        auto [from, to, weight] = g[j];
        if(dist[to] > dist[from] + weight){
            hasCycle = true;
            break;
        }
    }

    return hasCycle;
}]]></content>
